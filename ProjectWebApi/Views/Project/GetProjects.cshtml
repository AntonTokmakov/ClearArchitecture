@using Tasks.Models;
@model IEnumerable<Project>

<h2>Все проекты</h2>

<table class="table">
    <thead>
        <tr>
            <th>Наименование проекта</th>
            <th>Краткое наименование</th>
            <th>№ ТЗ проекта</th>
            <th>Статус проекта</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.project_name</td>
                <td>@project.short_name</td>
                <td># @project.id_ts</td>
                <td>@project.id_status</td>
            </tr>
        }
    </tbody>
</table>