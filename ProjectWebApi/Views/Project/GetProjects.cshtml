@using Tasks.Models;
@model IEnumerable<Project>

<h2>Все проекты</h2>

<table class="table">
    <thead>
        <tr>
            <th>Наименование проекта</th>
            <th>Краткое наименование</th>
            <th>№ ТЗ проекта</th>
            <th>Статус проекта</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var project in Model)
        {
            <tr>
                <td>@project.project_name</td>
                <td>@project.short_name</td>
                <td># @project.id_ts</td>
                <td>@project.id_status</td>
                <td>
                    <a asp-controller="Project" asp-action="Edit" asp-route-id="@project.id_project">Изменить</a> |
                    <a asp-controller="Project" asp-action="Delete" asp-route-id="@project.id_project">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>