@using Tasks.Models;
@model Project

<h2>Добавление проекта</h2>

<form asp-action="AddProject">
    <div class="form-group">
        <label asp-for="id_project" class="control-label"></label>
        <input asp-for="id_project" class="form-control" />
        <span asp-validation-for="id_project" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="project_name" class="control-label"></label>
        <input asp-for="project_name" class="form-control" />
        <span asp-validation-for="project_name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="id_ts" class="control-label"></label>
        <input asp-for="id_ts" class="form-control" />
        <span asp-validation-for="id_ts" class="text-danger"></span>
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addTSModal">
                Добавить техническую спецификацию
            </button>
    </div>
    <div class="form-group">
        <label asp-for="short_name" class="control-label"></label>
        <input asp-for="short_name" class="form-control" />
        <span asp-validation-for="short_name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="id_status" class="control-label"></label>
        <input asp-for="id_status" class="form-control" />
        <span asp-validation-for="id_status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
