@using TrialProject.Models;
@model TasksProject

<h2>Создание задачи</h2>

<form asp-action="Create">
    
    <div class="form-group">
        <label asp-for="id_project" class="control-label"></label>
        <input asp-for="id_project" class="form-control" />
        <span asp-validation-for="id_project" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="task_name" class="control-label"></label>
        <input asp-for="task_name" class="form-control" />
        <span asp-validation-for="task_name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="task_description" class="control-label"></label>
        <input asp-for="task_description" class="form-control" />
        <span asp-validation-for="task_description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="id_complexity_task" class="control-label"></label>
        <input asp-for="id_complexity_task" class="form-control" />
        <span asp-validation-for="id_complexity_task" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="id_student" class="control-label"></label>
        <input asp-for="id_student" class="form-control" />
        <span asp-validation-for="id_student" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="visible" class="control-label"></label>
        <input asp-for="visible" class="form-control" />
        <span asp-validation-for="visible" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="id_status" class="control-label"></label>
        <input asp-for="id_status" class="form-control" />
        <span asp-validation-for="id_status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input asp-area="" asp-action="Create" asp-controller="Task" type="submit" value="Создать" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="GetProjects" asp-controller="Project" >Назад</a>
</div>